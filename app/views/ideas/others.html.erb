<%# encoding: utf-8 %>

<div id="main">
  <div class="block">
    <div class="secondary-navigation">
      <ul class="wat-cf">
        <li class="first <%= 'active' if controller.action_name == 'others'%>" >
        <%= link_to t('liked'), others_ideas_path, :remote => true %>
        </li>
        <li <%= "class='active'" if controller.action_name == 'own'%>>
        <%= link_to t('mine'), own_ideas_path, :remote => true %>
        </li>
        <li <%= "class='active'" if controller.action_name == 'upload'%>>
        <%= link_to t('upload'), upload_ideas_path, :remote => true %>
        </li>
        <li <%= "class='active'" if controller.action_name == 'rules'%>>
        <%= link_to t('rule'), rules_ideas_path, :remote => true %>
        </li>
      </ul>
    </div>

    <div class="content">
      <% case controller.action_name %>
      <% when 'others' %>
        <%= render 'others_box' %>
      <% when 'own' %>
        <%= render 'own_box' %>
      <% when 'upload' %>
        <%= render 'upload' %>
      <% when 'rules' %>
        <%= render 'rule' %>
      <% end %>
    </div>

    <% content_for :sidebar, render(:partial => 'sidebar') -%>

    <br />

  </div>
</div>

<% if not mobile_device? %>
<div id="sidebar">
  <%= yield :sidebar %>
</div>
<% end %>

<div class="backToTop" title="回到顶部" style="display: none;"></div>

<div class="advise" >
  <%= link_to "意见反馈", advises_path %>
</div>

